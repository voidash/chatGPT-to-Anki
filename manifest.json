{
  "manifest_version": 3,
  "name": "Chat to Anki Flashcards",
  "version": "1.0.0",
  "description": "Convert ChatGPT conversations into Anki flashcards",
  
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chat to Anki Flashcards"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["modal.html", "config.html", "genanki.js", "js/sql/sql-wasm.js", "js/sql/sql-wasm.wasm", "jszip.min.js", "FileSaver.js", "test/test.html", "test/test.js"],
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"]
    }
  ]
}